<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:id="@+id/activity_main_refresh_bt"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Nearby Devices"/>

    <LinearLayout
            android:id="@+id/activity_main_container"
            android:layout_above="@id/activity_main_refresh_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/activity_main_devices_connected_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connected Devices"
                android:layout_margin="@dimen/activity_titles_padding"
                />

        <ListView
                android:id="@+id/activity_main_devices_connected_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/activity_main_devices_nearby_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_titles_padding"
                android:text="Devices Nearby"
                />

        <ListView
                android:id="@+id/activity_main_devices_nearby_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

    </LinearLayout>


    <ProgressBar
            android:id="@+id/activity_main_refreshing_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

</RelativeLayout>
